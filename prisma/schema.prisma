generator client {
  provider = "prisma-client-js"
}

datasource db {
  //sqlite es la base de datos por defecto
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  //por defecto, el campo id es auto incremental
  id    Int    @id @default(autoincrement())
  name  String
  price Float

  // campos de tipo booleano
  available Boolean @default(true)

  //campos de fecha y hora
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //El índice mejora el rendimiento de estas consultas, ya que la base de datos puede buscar en el índice en lugar de realizar un escaneo completo de la tabla.
  @@index([available])
}
